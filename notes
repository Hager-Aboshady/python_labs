""" 
def longest_substring(string):
    longest = ''
    current = ''

    for i in range(len(string)):
        if (i == 0 or string[i] >= string[i-1]):
            current += string[i]
        else:
            if len(current) > len(longest):
                longest = current
            current = string[i]

    if len(current) > len(longest):
        longest = current

    print("Longest substring in alphabetical order is:", longest)
